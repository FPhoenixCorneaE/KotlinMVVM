<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mClActivityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wan_android_color_bg_default">

    <com.wkz.widget.magicindicator.MagicIndicator
        android:id="@+id/mFlMagicIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/wan_android_colorPrimary"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mVpHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mFlMagicIndicator" />
</androidx.constraintlayout.widget.ConstraintLayout>