<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/wan_android_color_darker_gray" />
            <corners android:radius="@dimen/dp_8" />
            <padding
                android:bottom="@dimen/dp_2"
                android:left="@dimen/dp_4"
                android:right="@dimen/dp_4"
                android:top="@dimen/dp_2" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/wan_android_color_lighter_gray" />
            <corners android:radius="@dimen/dp_8" />
            <padding
                android:bottom="@dimen/dp_2"
                android:left="@dimen/dp_4"
                android:right="@dimen/dp_4"
                android:top="@dimen/dp_2" />
        </shape>
    </item>
</selector>