<?xml version="1.0" encoding="utf-8"?>
<resources>
    <paths>
        <!--代表外部存储区域的根目录下的文件 Environment.getExternalStorageDirectory()/DCIM/目录-->
        <!--name="" URI路径段，取值会隐藏你分享的目录的名字-->
        <!--path="" 你分享的目录的名字-->
        <!--DCIM 替代/storage/emulated/0/DCIM/-->
        <external-path
            name="DCIM"
            path="DCIM" />

        <!--代表外部存储区域的根目录下的文件 Environment.getExternalStorageDirectory()/pictures/camera目录-->
        <external-path
            name="external_pictures"
            path="pictures/camera" />

        <!--代表外部存储区域的根目录下的文件 Environment.getExternalStorageDirectory()/目录-->
        <external-path
            name="."
            path="." />

        <!--代表app外部存储区域根目录下的文件 Context.getExternalFilesDir(Environment.DIRECTORY_PICTURES)目录下的pictures目录-->
        <external-files-path
            name="."
            path="." />

        <!--物理路径相当于Context.getExternalCacheDir()-->
        <external-cache-path
            name="."
            path="." />

        <!--代表app私有的存储区域 Context.getFilesDir()目录下的images目录 /data/user/0/${applicationId}/files/-->
        <files-path
            name="."
            path="." />

        <!--代表app私有的存储区域 Context.getCacheDir()目录下的images目录 /data/user/0/${applicationId}/cache/-->
        <cache-path
            name="."
            path="." />

        <!--使用外置SD卡-->
        <root-path
            name="."
            path="." />
    </paths>
</resources>