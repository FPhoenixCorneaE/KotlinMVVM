<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fphoenixcorneae.kotlinmvvm">

    <dist:module dist:instant="true" />

    <application
        android:name="com.fphoenixcorneae.kotlinmvvm.application.OpenEyesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/open_eyes_ic_launcher"
        android:label="@string/open_eyes_app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/open_eyes_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:replace="android:label"
        tools:targetApi="m">
        <activity
            android:name="com.fphoenixcorneae.kotlinmvvm.test.TestActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            tools:ignore="LockedOrientationActivity" />
        <!-- 首页 -->
        <activity
            android:name="com.fphoenixcorneae.kotlinmvvm.mvvm.viewmodel.activity.OpenEyesHomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:label="@string/open_eyes_app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 视频播放详情页面 -->
        <activity
            android:name="com.fphoenixcorneae.kotlinmvvm.mvvm.viewmodel.activity.OpenEyesVideoDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen"
            android:windowSoftInputMode="adjustNothing"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>