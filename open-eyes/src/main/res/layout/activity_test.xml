<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".test.TestActivity"
>

    <TextView
            android:id="@+id/mTvPostJson"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/open_eyes_color_black"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mTvPostForm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Post Json格式"
            tools:ignore="HardcodedText"
    />
    <TextView
            android:id="@+id/mTvPostForm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/open_eyes_color_black"
            app:layout_constraintTop_toBottomOf="@+id/mTvPostJson"
            app:layout_constraintBottom_toTopOf="@+id/mTvPostMultipart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Post Form格式"
            tools:ignore="HardcodedText"
    />
    <TextView
            android:id="@+id/mTvPostMultipart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/open_eyes_color_black"
            app:layout_constraintTop_toBottomOf="@+id/mTvPostForm"
            app:layout_constraintBottom_toTopOf="@+id/mTvGoToHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Post Multipart格式"
            tools:ignore="HardcodedText"
    />
    <TextView
            android:id="@+id/mTvGoToHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/open_eyes_color_black"
            app:layout_constraintTop_toBottomOf="@+id/mTvPostMultipart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Post Multipart格式"
            tools:ignore="HardcodedText"
    />
</androidx.constraintlayout.widget.ConstraintLayout>