<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mFlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/easy_behavior_bottom_behavior">

        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_navigation_height"
            android:layout_gravity="bottom"
            android:background="@color/open_eyes_color_bg_default" />

        <com.fphoenixcorneae.bottomnavigation.BottomNavigationView
            android:id="@+id/mBnvNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bnv_shadow="false" />
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
